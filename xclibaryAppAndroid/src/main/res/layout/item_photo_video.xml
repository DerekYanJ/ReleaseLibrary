<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="0dp"
    android:layout_margin="7.5dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="70dp"
            android:scaleType="centerCrop"
            android:layout_height="70dp"/>

        <View
            android:visibility="gone"
            android:id="@+id/view_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@+id/iv_pic"
            app:layout_constraintEnd_toEndOf="@+id/iv_pic"
            app:layout_constraintTop_toTopOf="@+id/iv_pic"
            app:layout_constraintBottom_toBottomOf="@+id/iv_pic"
            android:background="#50000000"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_video_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_growth_video_play"
            android:layout_centerInParent="true"
            app:layout_constraintStart_toStartOf="@+id/view_view"
            app:layout_constraintEnd_toEndOf="@+id/view_view"
            app:layout_constraintTop_toTopOf="@+id/view_view"
            app:layout_constraintBottom_toBottomOf="@+id/view_view"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>